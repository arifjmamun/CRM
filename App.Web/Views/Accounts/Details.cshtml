@model App.Entity.Models.BankAccount

@{
    ViewBag.Title = "Account Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h6 class="card-header bg-primary">ACCOUNT / DETAILS</h6>
    <div class="card-block">
        <div class="row">
            <div class="col-md-12">
                <h5>
                    AIRLINE NAME: @Model.AccountName.ToUpper()
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-sm"> <span class="fa fa-edit"></span> Edit</a>
                </h5>
                <br />
                <table class="table table-striped m-md-b-0">
                    <tr>
                        <th width="150">@Html.DisplayNameFor(m => m.AccountId)</th>
                        <td>@Model.AccountId</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.AccountNumber)</th>
                        <td>@Model.AccountNumber</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.BankName)</th>
                        <td>@Model.BankName</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.BranchName)</th>
                        <td>@Model.BranchName</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Balance)</th>
                        <td>@Model.Balance</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Status)</th>
                        <td>@Model.Status</td>
                    </tr>
                </table>
            </div>
        </div>
        <br />
        <div class="col-md-3">
            <a href="@Url.Action("Index")" class="btn btn-info"> <span class="fa fa-chevron-left"></span> Back to List</a>
        </div>
    </div>

</div>
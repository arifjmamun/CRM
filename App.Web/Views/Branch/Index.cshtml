@using App.Entity.Models
@model IEnumerable<App.Entity.Models.BranchInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section RareCase
{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}

<div class="card">
    <h6 class="card-header">BRANCH / LIST</h6>
    <div class="card-block">
        <div class="row">
            <div class="col-md-3">
                <a href="@Url.Action("Create")" class="btn btn-info"> <span class="fa fa-plus"></span> Create New</a>
            </div>
            <div class="col-md-12">
                @*<table class="table table-striped table-bordered m-md-b-0" id="branchTable"></table>*@
                @Html.Partial("_MVCGridToolbar", new MVCGridToolbarModel()
                {
                    MVCGridName = "branchTable",
                    PageSize = true,
                    ColumnVisibility = true,
                    GlobalSearch = true
                })
                @Html.MVCGrid("branchTable")
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/MVCGridHandler.axd/script.js"></script>
}

@using App.Web.Context
@model App.Web.Models.DepositViewModel

@{
    var db = new CrmDbContext();
    ViewBag.Agents = new SelectList(db.AgentInfos, "Id", "AgentName");
}

<div class="form-group row">
    @Html.LabelFor(model => model.PayerId, "Agent", htmlAttributes: new { @class = "control-label col-sm-4 text-md-right" })
    <div class="col-sm-4">
        @Html.DropDownListFor(model => model.PayerId, (SelectList)ViewBag.Agents, "Select One", new { @class = "form-control select2" })
        @Html.ValidationMessageFor(model => model.PayerId, "", new { @class = "text-danger" })
    </div>
</div>

